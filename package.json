{
  "name": "auth-snapshot",
  "version": "1.0.0",
  "description": "Contact management demonstration with authentication and role-based authorization",
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint ./src/*.js ./src/*/*.js ./src/*/*/*.js; exit 0",
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "db:reset": "dropdb contacts_development && createdb contacts_development && npm run load_schema",
    "load_schema": "psql -d contacts_development < src/db/schema/schema.sql",
    "load_contacts": "psql -d contacts_development < test/seed/contacts.sql",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Eugene Baah and Jonathan Pool",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "express-session": "^1.15.5",
    "morgan": "^1.8.2",
    "pg-promise": "^6.2.1"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "babel-preset-es2015": ">=6.24.1",
    "babel-register": ">=6.24.1",
    "eslint": "^4.0.0"
  },
  "bugs": {
    "url": "https://github.com/jrpool/auth.git/issues"
  },
  "homepage": "https://github.com/jrpool/auth.git/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/auth.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jquery": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 0,
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "off"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/",
            "*"
          ]
        }
      ]
    }
  }
}
